myhostname = mail.typingsprint.com
mydomain = typingsprint.com
myorigin = $mydomain
inet_interfaces = all
inet_protocols = ipv4
mydestination = 
relayhost = 
home_mailbox = Maildir/
smtpd_banner = $myhostname ESMTP TypingSprint Mail

# Allow only trusted/local clients for now
smtpd_recipient_restrictions = permit_mynetworks permit_sasl_authenticated reject_unauth_destination

